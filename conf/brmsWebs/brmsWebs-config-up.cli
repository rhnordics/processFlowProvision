batch
/subsystem=deployment-scanner/scanner=default/:write-attribute(name=deployment-timeout,value=180)

/subsystem=datasources/data-source=guvnor-cp:add(jndi-name=java:/global/guvnor-cp,connection-url=${guvnor_connection_url},driver-class=${guvnor_driver_class},driver-name=${jdbc.module.name},user-name=${guvnor_db_user},password=${guvnor_db_password},pool-name=guvnor-cp,max-pool-size=50,min-pool-size=10)
/subsystem=datasources/data-source=guvnor-cp:enable()
run-batch

batch
deploy ${temp.deployments.dir}/${guvnor.name} --name=${guvnor.name}
deploy ${temp.deployments.dir}/${designer.name} --name=designer.war
run-batch
